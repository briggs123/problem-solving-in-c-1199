#include <stdio.h>

int main()
{ 
    int a,b,c,d,e,ch;
    printf("choice of the equation is a and remaining functions are following");
    scanf("%d %d %d",&ch,&a,&b);
    c=a+b;
    d=a*b;
    e=a/b;
    switch(ch)
    {
    case 1:
    printf("the sum is %d",c);
    break;
    case 2:
    printf("the product is %d",d);
    break;
    case 3:
    printf("the division is %d",e);
    break;
    default:
    printf("enter the value of 1 to 3");
    }
    return 0;
}


