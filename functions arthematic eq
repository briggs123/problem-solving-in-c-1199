#include<stdio.h>
int addition(int a,int b){
    int result;
    result=a+b;
    return result;
}
int multiplication(int a,int b)
{
    int result;
    result=a*b;
    return result;
}
int division(int a,int b)
{
    int result;
    result=a/b;
    return result;}
int sub(int a,int b)
{
    int result;
    result=a-b;
    return result;
}

int main()
{
    int n1,n2,sum,product,difference,divi;
printf("enter required numbers");
scanf("%d%d",&n1,&n2);
sum=addition(n1,n2);
product=multiplication(n1,n2);
divi=division(n1,n2);
difference=sub(n1,n2);
printf("%d\n%d\n%d\n%d",sum,product,divi,difference);
return 0;
}
